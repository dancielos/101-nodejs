{
	"extends": "@tsconfig/node-lts/tsconfig.json",
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "es5",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"strict": true,
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	}
}
