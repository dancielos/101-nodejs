{
	"extends": "@tsconfig/node-lts/tsconfig.json",
	"compilerOptions": {
		"lib": ["ESNext", "dom"],
		"target": "es5",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"sourceMap": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"strict": true,
		"paths": {
			"@util/*": ["src/util/*"]
			// "*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
